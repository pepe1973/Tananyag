<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link
            rel="stylesheet"
            href="/css/cakes/new-cake.css"
        />
        <title>Új torta felvétele</title>
    </head>
    <body>
        <%- include('../nav.ejs') %>
        <div id="uj-torta-kontener">
            <h1>Új torta felvétele</h1>
            <form>
                <table>
                    <tr>
                        <td>Név:</td>
                        <td>
                            <input
                                type="text"
                                id="nev"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Ár:</td>
                        <td>
                            <input
                                type="number"
                                id="ar"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Leírás:</td>
                        <td><textarea id="leiras"></textarea></td>
                    </tr>
                    <tr>
                        <td>Kép 1:</td>
                        <td>
                            <input
                                type="text"
                                id="kep1"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Kép 2:</td>
                        <td>
                            <input
                                type="text"
                                id="kep2"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>Kép 3:</td>
                        <td>
                            <input
                                type="text"
                                id="kep3"
                            />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button onclick="feltoltes(event)">
                                Feltöltés
                            </button>
                        </td>
                        <td></td>
                    </tr>
                </table>
            </form>
        </div>
        <script src="/js/torta.mjs"></script>
    </body>
</html>
